# ===============
#  .gitconfig
# ===============

[alias]
  a      = add
  ad     = add
  ap     = add --patch
  br     = branch --all --color --verbose --verbose
  ci     = commit --verbose
  cl     = clone
  co     = checkout
  d      = diff
  dc     = diff --cached
  dd     = diff HEAD~
  ddd    = diff HEAD~2
  dddd   = diff HEAD~3
  ddddd  = diff HEAD~4
  ds     = diff --staged
  fe     = fetch
  fix    = commit --amend
  ft     = fetch
  g      = grep --break --color --heading --line-number --show-function
  l      = log --decorate --stat --no-merges
  la     = log --decorate --stat
  ll     = log --decorate --oneline --graph --no-merges
  lla    = log --decorate --oneline --graph
  lp     = log --decorate --patch-with-stat --no-merges
  lpa    = log --decorate --patch-with-stat
  pl     = pull
  pu     = push
  pul    = pull
  pus    = push
  r      = remote --verbose
  rvt    = checkout --
  rvth   = checkout HEAD --    # Revert a file to HEAD
  rvti   = checkout --         # Revert a file to index
  sh     = show
  sl     = stash list
  sp     = stash show --patch
  ss     = stash
  st     = status --branch --short
  sync   = !git fetch && git reset --hard FETCH_HEAD
  unlive = reset --hard HEAD
  unstg  = reset HEAD
[color]
  branch      = auto
  diff        = auto
  grep        = auto
  interactive = auto
  status      = auto
[diff]
  algorithm = histogram
[github]
  user = curipha
[help]
  autocorrect = -1
[interactive]
  singlekey = true
[merge]
  ff = false
[push]
  default = current
[user]
  name  = Taichi
  email = taichi@curipha.jp

