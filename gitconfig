# ===============
#  .gitconfig
# ===============

[alias]
  a      = add
  aa     = add --all --verbose
  ap     = add --patch
  au     = add --update --verbose
  br     = branch --all --color --verbose --verbose
  ci     = commit --verbose
  cl     = clean -d
  co     = checkout
  d      = diff
  dc     = diff --cached
  dcw    = diff --cached --ignore-all-space --ignore-blank-lines
  dd     = diff HEAD~
  ddd    = diff HEAD~2
  dddd   = diff HEAD~3
  ddddd  = diff HEAD~4
  dw     = diff --ignore-all-space --ignore-blank-lines
  fe     = fetch --verbose
  fix    = commit --amend
  g      = grep --break --color --heading --line-number --show-function
  l      = log --decorate --stat --no-merges
  la     = log --decorate --stat
  ll     = log --decorate --oneline --graph --no-merges
  lla    = log --decorate --oneline --graph
  lp     = log --decorate --patch-with-stat --no-merges
  lpa    = log --decorate --patch-with-stat
  pl     = pull
  pu     = push
  r      = remote --verbose
  rvt    = checkout --
  rvth   = checkout HEAD --    # Revert a file to HEAD
  rvti   = checkout --         # Revert a file to index
  sh     = show
  sl     = stash list
  sp     = stash show --patch
  ss     = stash
  st     = status --branch --short --untracked-files=all
  sync   = !git fetch && git reset --hard FETCH_HEAD
  unlive = reset --hard HEAD
  unstg  = reset HEAD

[color]
  branch      = auto
  diff        = auto
  grep        = auto
  interactive = auto
  status      = auto
[color "diff"]
  meta = bold
  frag = cyan bold
  new  = green bold
  old  = red bold
[color "status"]
  header    = bold
  added     = yellow bold
  changed   = green bold
  untracked = cyan bold

[diff]
  algorithm = histogram

[fetch]
  prune = true

[github]
  user = curipha

[help]
  autocorrect = -1

[include]
  path = ~/.gitconfig.local

[interactive]
  singlekey = true

[merge]
  ff = false

[push]
  default = current

[user]
  name  = Taichi
  email = taichi@curipha.jp

