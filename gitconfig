# ===============
#  .gitconfig
# ===============

[alias]
  a     = add
  aa    = add --all --verbose
  ap    = add --patch
  au    = add --update --verbose
  br    = branch --all --verbose --verbose
  ci    = commit --verbose
  co    = checkout
  d     = diff --patch-with-stat
  dc    = diff --patch-with-stat --cached
  dcw   = diff --patch-with-stat --cached --ignore-all-space
  dd    = diff --patch-with-stat HEAD~
  ddd   = diff --patch-with-stat HEAD~2
  dddd  = diff --patch-with-stat HEAD~3
  ddddd = diff --patch-with-stat HEAD~4
  dw    = diff --patch-with-stat --ignore-all-space
  fe    = fetch --verbose
  g     = grep --break --heading --line-number --show-function
  l     = log --decorate --stat --no-merges
  la    = log --decorate --stat
  ll    = log --decorate --oneline --graph --no-merges
  lla   = log --decorate --oneline --graph
  lp    = log --decorate --patch-with-stat --no-merges
  lpa   = log --decorate --patch-with-stat
  pl    = pull
  pu    = push
  r     = remote --verbose
  sh    = show
  sl    = stash list
  sp    = stash show --patch
  ss    = stash
  st    = status --branch --short --untracked-files=all
  sync  = !git stash save && git fetch && git reset --hard FETCH_HEAD && git gc --quiet
  unstg = reset HEAD --

  revert-file-to-head  = checkout HEAD --
  revert-file-to-index = checkout --

[color]
  branch      = auto
  diff        = auto
  grep        = auto
  interactive = auto
  status      = auto
[color "branch"]
  current     = green bold
  remote      = red bold
  upstream    = blue bold
[color "diff"]
  commit      = yellow bold
  meta        = bold
  frag        = cyan bold
  func        = magenta
  new         = green bold
  old         = red bold
[color "status"]
  header      = bold
  added       = yellow bold
  changed     = green bold
  untracked   = cyan bold

[core]
  preloadindex = true
  quotepath    = false

[diff]
  algorithm      = histogram
  renames        = copy
  statGraphWidth = 48

[fetch]
  prune = true

[github]
  user = curipha

[help]
  autocorrect = -1

[include]
  path = ~/.gitconfig.local

[interactive]
  singlekey = true

[merge]
  ff = false

[push]
  default = current

[url "git@github.com:"]
  insteadOf     = gh:
  pushInsteadOf = https://github.com/
  pushInsteadOf = git://github.com/

[user]
  name  = Taichi
  email = taichi@curipha.jp

# vim: filetype=gitconfig
