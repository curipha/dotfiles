  branch      = auto
  diff        = auto
  grep        = auto
  interactive = auto
  status      = auto
[alias]
  a     = add
  ad    = add
  br    = branch --color --verbose --verbose
  ci    = commit
  cl    = clone
  co    = checkout
  d     = diff
  dc    = diff --cached
  dd    = diff HEAD~
  ddd   = diff HEAD~~
  dddd  = diff HEAD~~~
  ddddd = diff HEAD~~~~
  ds    = diff --staged
  fe    = fetch
  fix   = commit --amend
  ft    = fetch
  g     = grep --break --color --heading --line-number --show-function
  l     = log --decorate --stat
  lp    = log --decorate --patch-with-stat
  p     = push
  pl    = pull
  pu    = push
  pul   = pull
  pus   = push
  sh    = show
  st    = status --branch --short
  tree  = log --graph --oneline
