Protocol 2

Host *
  IdentityFile         ~/.ssh/id_ecdsa

# IgnoreUnknown        yes

  Ciphers              aes256-gcm@openssh.com,chacha20-poly1305@openssh.com,aes256-ctr
  KexAlgorithms        curve25519-sha256@libssh.org,ecdh-sha2-nistp521,ecdh-sha2-nistp384,ecdh-sha2-nistp256,diffie-hellman-group-exchange-sha256,diffie-hellman-group-exchange-sha1
  MACs                 hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-sha1-etm@openssh.com,hmac-sha2-512,hmac-sha2-256,hmac-sha1

  GSSAPIAuthentication no
  HashKnownHosts       yes

  Compression          no
  ForwardAgent         no

  TCPKeepAlive         yes
  ServerAliveInterval  3
  ServerAliveCountMax  5

  RekeyLimit           100M 1h

# ControlMaster        auto
# ControlPath          ~/.ssh/control-%r@%h:%p

