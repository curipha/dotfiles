# ===============
#  ~/.ssh/config
# ===============

Protocol 2
IgnoreUnknown PubkeyAcceptedKeyTypes,Include

Include ~/.ssh/config.include

Host github.com
  User git

  RequestTTY    no
  VisualHostKey no

Host *
  IdentityFile   ~/.ssh/id_ed25519
  IdentitiesOnly yes

  Ciphers       chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes256-ctr
  KexAlgorithms curve25519-sha256,curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256,ecdh-sha2-nistp521
  MACs          hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,umac-128-etm@openssh.com,hmac-sha2-512

  PubKeyAuthentication     yes
  PreferredAuthentications publickey
  PubkeyAcceptedKeyTypes   ssh-ed25519,ecdsa-sha2-nistp521,ssh-rsa
  HostKeyAlgorithms        ssh-ed25519,ecdsa-sha2-nistp521,ecdsa-sha2-nistp256,ssh-rsa

  ChallengeResponseAuthentication no
  GSSAPIAuthentication            no
  HostbasedAuthentication         no
  KbdInteractiveAuthentication    no
  PasswordAuthentication          no

  CheckHostIP           yes
  VerifyHostKeyDNS      ask
  StrictHostKeyChecking ask
  VisualHostKey         yes
  HashKnownHosts        yes

  Compression  no
  ForwardAgent no
  ForwardX11   no
  UseRoaming   no

  ConnectionAttempts 2

  TCPKeepAlive        yes
  ServerAliveInterval 10
  ServerAliveCountMax  3

  RekeyLimit 100M 1h

# ControlMaster auto
# ControlPath   ~/.ssh/control-%r@%h:%p

