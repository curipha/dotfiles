# ===============
#  .screenrc
# ===============

# Core {{{
defutf8 on
defencoding UTF-8
encoding UTF-8 UTF-8

autodetach on
verbose on
escape ^Jj

defscrollback 100000
multiuser off
idle off

ignorecase on

shell -$SHELL
#}}}
# Display {{{
defbce on
altscreen on

startup_message off
bell_msg "Bell in window %^G"
vbell off

caption always '%?%F%{+r}%:%{= Kk}%?%3n %t'
hardstatus alwayslastline "%{+r} %H %{=} %-w%{+b}[%n %t]%{=}%+w %=| %l | %M.%d (%D) %c"
#}}}

# Key bind {{{
bind b
bind ^b
bind ^g

bind p  paste .
bind ^p paste .

bind r  redisplay
bind ^r redisplay

bind k  prev
bind ^k prev
bind j  next
bind ^j next

bind l  windowlist -b
bind ^l windowlist -b

bind n  focus
bind ^n focus

bind s  split
bind ^s split
bind v  split -v
bind ^v split -v

bind o  only
bind ^o only
bind x  remove
bind ^x remove
bind q  remove
bind ^q remove
bind f  fit
bind ^f fit

bind r  eval 'echo "Resize window"' 'command -c resize'
bind ^r eval 'echo "Resize window"' 'command -c resize'
bind -c resize ^] command
bind -c resize j eval 'resize +1' 'command -c resize'
bind -c resize k eval 'resize -1' 'command -c resize'
#}}}

